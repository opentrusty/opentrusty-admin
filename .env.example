# OpenTrusty Admin Plane Configuration
OPENTRUSTY_ENV=dev
OPENTRUSTY_ADMIN_LISTEN_ADDR=:8081
OPENTRUSTY_LOG_LEVEL=info
OPENTRUSTY_BASE_URL=http://localhost

# Database (Discrete fields preferred over legacy OPENTRUSTY_DATABASE_URL)
OPENTRUSTY_DB_HOST=localhost
OPENTRUSTY_DB_PORT=5432
OPENTRUSTY_DB_USER=postgres
OPENTRUSTY_DB_PASSWORD=password
OPENTRUSTY_DB_NAME=opentrusty
OPENTRUSTY_DB_SSLMODE=disable

# OPENTRUSTY_DATABASE_URL=postgres://postgres:password@localhost:5432/opentrusty?sslmode=disable

# Security
# OPENTRUSTY_IDENTITY_SECRET: Shared secret for cross-plane data protection.
# MUST be identical across Auth, Admin, and CLI.
OPENTRUSTY_IDENTITY_SECRET=change-me-in-production

# OPENTRUSTY_SESSION_SECRET: Secret for session management.
# MUST be identical across Auth and Admin for cross-plane session trust (if applicable).
OPENTRUSTY_SESSION_SECRET=change-me-in-production

# Admin specific
OPENTRUSTY_ADMIN_SESSION_NAMESPACE=admin

# Cookie Attributes (Dev mode defaults shown)
OPENTRUSTY_COOKIE_SECURE=false
OPENTRUSTY_COOKIE_HTTPONLY=true
OPENTRUSTY_COOKIE_SAMESITE=Lax
OPENTRUSTY_COOKIE_DOMAIN=
OPENTRUSTY_COOKIE_NAME=ot_session_admin


